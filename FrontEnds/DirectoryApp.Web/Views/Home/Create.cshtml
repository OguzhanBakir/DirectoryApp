                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" autocomplete="off" required/>
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" autocomplete="off" required/>
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Company" class="form-label"></label>
                        <input asp-for="Company" class="form-control" autocomplete="off" required/>
                        <span class="text-danger" asp-validation-for="Company"></span>
                    </div>

                   

                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
